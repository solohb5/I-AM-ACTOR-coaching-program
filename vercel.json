{
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "functions": {
    "api/create-checkout.js": {
      "maxDuration": 10
    },
    "api/mailerlite-subscribe.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
